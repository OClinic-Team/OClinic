<body>
  <div class='mt-4 container'>
    <h2>{{blog.title}}</h2>
    {{!-- <div>{{blog.content }}></div> --}}

    {{!--
    <div dangerouslySetInnerHTML={{__html: blog.content}} />
    --}}

    {{!-- <p>{{blog.content}}</p> --}}

    <textarea id="example" readonly>
      &nbsp; <p>{{blog.content}}</p>
    </textarea>

  </div>
  <script>
    var editor = new FroalaEditor('#example', {
      toolbarInline: true,
      charCounterCount: false,
    }, function () {
      editor.edit.off();
    })

    
  </script>
