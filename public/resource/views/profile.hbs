<div class="container h1 mt-3">
    <h1>Thông Tin Cá Nhân</h1>
    <hr>
</div>
<div class="container emp-profile">
            <form method="post">
               {{#if profilePatient}}
                    <div class="row">
                        <div class="col-md-4">
                            <div class="profile-img">
                                <img src="{{profilePatient.ImageURL}}" alt=""/>
                                {{!-- <div class="file btn btn-lg btn-primary">
                                    Change Photo
                                    <input type="file" name="file"/>
                                </div> --}}
                            </div>
                        </div>
                        
                        <div class="col-md-6">
                            
                            <div class="profile-head">
                                        <h4>
                                            {{profilePatient.Name}}
                                        </h4>
                                        <h5>
                                            {{profilePatient.Email}}
                                        </h5>
                                        <hr>
                                        <h5>
                                            User ID
                                        </h5>
                                        <h6>
                                            {{profilePatient.Id}}
                                        </h6>
                                        <hr>
                                        <h5>
                                            Ngày Sinh 
                                        </h5>
                                        <h6>
                                            {{profilePatient.Age}}
                                        </h6>
                                        <hr>
                                        <h5>
                                            Giới Tính 
                                        </h5>
                                        <h6>
                                            {{profilePatient.Sex}}
                                        </h6>
                                        <hr>
                                        <h5>
                                            Số Điện Thoại 
                                        </h5>
                                        <h6>
                                            {{profilePatient.Phone}}
                                        </h6>
                                        <hr>
                                        <h5>
                                            Địa Chỉ 
                                        </h5>
                                        <h6>
                                            {{profilePatient.Address}}
                                        </h6>    
                                <ul class="nav nav-tabs" id="myTab" role="tablist">
                                    <li class="nav-item"></li>
                                </ul>
                                
                            </div>
                        </div>
                        <div class="col-md-2">
                            <a href="/profile/{{profilePatient.Id}}/edit" type="submit" class="profile-edit-btn" name="btnAddMore" value="Edit Profile"/>
                                        Chỉnh Sửa
                            </a>
                        </div>
                    </div>
                {{else}}
                    <div class="row">
                        <div class="col-md-4">
                            <div class="profile-img">
                                <img src="{{profileDoctor.ImageURL}}" alt=""/>
                                {{!-- <div class="file btn btn-lg btn-primary">
                                    Change Photo
                                    <input type="file" name="file"/>
                                </div> --}}
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="profile-head">
                                        <h4>
                                            {{profileDoctor.Name}}
                                        </h4>
                                        <h5>
                                            {{profileDoctor.Email}}
                                        </h5>
                                        <hr>
                                        <h5>
                                            User ID
                                        </h5>
                                        <h6>
                                            {{profileDoctor.Id}}
                                        </h6>
                                        <hr>
                                        <h5>
                                            Ngày Sinh 
                                        </h5>
                                        <h6>
                                            {{profileDoctor.Age}}
                                        </h6>
                                        <hr>
                                        <h5>
                                            Giới Tính 
                                        </h5>
                                        <h6>
                                            {{profileDoctor.Sex}}
                                        </h6>
                                        <hr>
                                        <h5>
                                            Số Điện Thoại 
                                        </h5>
                                        <h6>
                                            {{profileDoctor.Phone}}
                                        </h6>
                                        <hr>
                                        <h5>
                                            Địa Chỉ 
                                        </h5>
                                        <h6>
                                            {{profileDoctor.Address}}
                                        </h6>
                                        <hr>
                                        <h5>
                                            Chuyên Khoa 
                                        </h5>
                                        <h6>
                                            {{profileDoctor.Department}}
                                        </h6>    
                                        <hr>
                                        <h5>
                                            Mô Tả
                                        </h5>
                                        <h6>
                                            {{profileDoctor.Description}}
                                        </h6>    
                                <ul class="nav nav-tabs" id="myTab" role="tablist">
                                    
                                    <li class="nav-item">

                                    </li>
                                </ul>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <a href="/profile/{{profileDoctor.Id}}/edit" type="submit" class="profile-edit-btn" name="btnAddMore" value="Edit Profile"/>
                                Chỉnh Sửa
                            </a>
                        </div>
                    </div>
                    
                {{/if}}
            </form>           
        </div>