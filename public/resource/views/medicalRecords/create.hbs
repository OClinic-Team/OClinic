            <a class="dropdown-item" href="#">{{medicalRecord.prescription}}</a>
        </div>
        </div> --}}
        {{else}}
            <h3>Bệnh nhân chưa có hồ sơ bệnh án</h3>
        {{/each}}
    {{/each}}
    </div>
</div>