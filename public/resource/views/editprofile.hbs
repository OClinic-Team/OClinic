t<div class="container bootstrap snippets bootdey">
    <h1 class="text-primary">Edit Profile</h1>
      <hr>
	<div class="row">
      <!-- left column -->
      <div class="col-md-3">
        <div class="text-center">
          <img src="{{profile.ImageURL}}" class="avatar img-circle img-thumbnail" alt="avatar">
          <h6>Upload a different photo...</h6>
          
          <input type="file" class="form-control">

        </div>
      </div>
      
      <!-- edit form column -->
      <div class="col-md-9 personal-info">
        <h3>Personal info</h3>
        
        <form method="POST" class="form-horizontal" action="/profile/editInformation">
        {{#if profilePatient}}
          <div>  
          <input type="hidden" name="ImageURL" class="form-control"  value={{profilePatient.ImageURL}}>
          <input type="hidden" name="Id" class="form-control"  value={{profilePatient.Id}}>
          <input type="hidden" class="col-lg-3 control-label" name="Email" style="margin-top: 5px;" id="" cols="80" rows="1" value={{profilePatient.Email}}>
          </div>
          <div class="form-group">
            <label class="col-lg-3 control-label">Name:</label>
            <div class="col-lg-8">
              <input class="form-control" name="Name" type="text" placeholder="{{profilePatient.Name}}">
            </div>
          </div>
          <div class='form-group'>
            <label class="col-lg-3 control-label">Age:</label>
              <div>
                <input class="form-control" name="Age" type="text" placeholder="{{profilePatient.Age}}">
              </div>
          </div>
          <div class="form-group">
            <label class="col-lg-3 control-label">Sex:</label>
            <div class="col-sm-10">
                    <div class="form-check m-1">
                    <input class="form-check-input" type="radio" name="Sex" id="gridRadios1" value="male" checked>
                    <label class="form-check-label" for="gridRadios1">
                    male
                    </label>
                    </div>
                    <div class="form-check m-1">
                    <input class="form-check-input" type="radio" name="Sex" id="gridRadios2" value="female">
                    <label class="form-check-label" for="gridRadios2">
                    female
                    </label>
                    </label>
                    </div>
                    <div class="form-check m-1">
                    <input class="form-check-input" type="radio" name="Sex" id="gridRadios2" value="other">
                    <label class="form-check-label" for="gridRadios2">
                    Other
                    </label>
          </div>
          
          <div class="form-group">
            <label class="col-lg-3 control-label">Phone:</label>
            <div class="col-lg-8">
              <input class="form-control" name="Phone" type="text" placeholder="{{profilePatient.Phone}}">
            </div>
          </div>
          <div class="form-group">
            <label class="col-lg-3 control-label">Address</label>
            <div class="col-lg-8">
              <input class="form-control" name="Address" type="text" placeholder="{{profilePatient.Address}}">
            </div>
          </div>
        {{else}}
            <div>  
            <input type="hidden" name="ImageURL" class="form-control"  value={{profileDoctor.ImageURL}}>
            <input type="hidden" name="Id" class="form-control"  value={{profileDoctor.Id}}>
            <input type="hidden" class="col-lg-3 control-label" name="Email" style="margin-top: 5px;" id="" cols="80" rows="1" value={{profileDoctor.Email}}>
            </div>
              <div class="form-group">
                <label class="col-lg-3 control-label">Name:</label>
                <div class="col-lg-8">
                  <input class="form-control" name="Name" type="text" placeholder="{{profileDoctor.Name}}">
                </div>
              </div>
              <div class='form-group'>
                <label class="col-lg-3 control-label">Age:</label>
                  <div>
                    <input class="form-control" name="Age" type="text" placeholder="{{profileDoctor.Age}}">
                  </div>
              </div>
              <div class="form-group">
                <label class="col-lg-3 control-label">Sex:</label>
                <div class="col-sm-10">
                    <div class="form-check m-1">
                    <input class="form-check-input" type="radio" name="Sex" id="gridRadios1" value="male" checked>
                    <label class="form-check-label" for="gridRadios1">
                    male
                    </label>
                    </div>
                    <div class="form-check m-1">
                    <input class="form-check-input" type="radio" name="Sex" id="gridRadios2" value="female">
                    <label class="form-check-label" for="gridRadios2">
                    female
                    </label>
                    </label>
                    </div>
                    <div class="form-check m-1">
                    <input class="form-check-input" type="radio" name="Sex" id="gridRadios2" value="other">
                    <label class="form-check-label" for="gridRadios2">
                    Other
                    </label>
          </div>
          
          <div class="form-group">
            <label class="col-lg-3 control-label">Phone:</label>
            <div class="col-lg-8">
              <input class="form-control" name="Phone" type="text" placeholder="{{profileDoctor.Phone}}">
            </div>
          </div>
          <div class="form-group">
            <label class="col-lg-3 control-label">Address</label>
            <div class="col-lg-8">
              <input class="form-control" name="Address" type="text" placeholder="{{profileDoctor.Address}}">
            </div>
          </div>
           <div class="form-group">
            <label class="col-lg-3 control-label">Department</label>
            <div class="col-lg-8">
              <input class="form-control" name="Address" type="text" placeholder="{{profileDoctor.Department}}">
            </div>
          </div>
           <div class="form-group">
            <label class="col-lg-3 control-label">Practicing certificate:</label>
            <div class="col-lg-8">
              <input class="form-control" name="Address" type="text" placeholder="{{profileDoctor.Practicing_certificate}}">
            </div>
          </div>
        {{/if}}
            <button type="submit" >Save</button>
        </form>
      </div>
  </div>
</div>
<hr>
